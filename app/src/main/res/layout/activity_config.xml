<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/app_name"/>

    <EditText
        android:id="@+id/columnEditText"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:hint="@string/column"
        android:inputType="number"
        android:background="@drawable/bg_border_primary_3dp" />

    <EditText
        android:id="@+id/rowEditText"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:hint="@string/row"
        android:inputType="number"
        android:background="@drawable/bg_border_primary_3dp" />

    <Button
        android:id="@+id/goBtn"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="@string/go"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/bg_corner_primary_3dp"/>
</LinearLayout>